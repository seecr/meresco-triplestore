from os import execv
from sys import argv
from glob import glob
OWLIMJARS = glob("/usr/share/java/owlim-lite-java/*.jar")
MY_JARS = glob("/usr/share/java/meresco-owlim/*.jar")

from os import system                                        #DO_NOT_DISTRIBUTE
from os.path import dirname, abspath, isdir, join            #DO_NOT_DISTRIBUTE
status = system("cd %s/..; ./build.sh"  % abspath(dirname(__file__)))  #DO_NOT_DISTRIBUTE
if status > 0:                                               #DO_NOT_DISTRIBUTE
    import sys                                               #DO_NOT_DISTRIBUTE
    sys.exit(status)                                         #DO_NOT_DISTRIBUTE
MY_JARS = glob("../jars/*.jar") + glob("../*.jar")           #DO_NOT_DISTRIBUTE

CP = ':'.join(MY_JARS + OWLIMJARS)

maxMemArgs = [arg for arg in argv[1:] if arg.startswith('-Xmx')]
maxMem = maxMemArgs[-1] if maxMemArgs else '-Xmx1536m'
argv = [arg for arg in argv if arg != maxMem]

execv("/usr/bin/java", [
    argv[0], 
    maxMem,
    '-Dfile.encoding=UTF-8', 
    '-DentityExpansionLimit=1024000', 
    '-cp', CP, 
    'org.meresco.owlimhttpserver.OwlimServer'] + argv[1:])

